{
	"name": "@jiujue/react-canvas-fiber",
	"version": "2.1.2",
	"private": false,
	"type": "module",
	"license": "MIT",
	"description": "A React custom renderer for Canvas2D with Yoga layout",
	"keywords": [
		"react",
		"canvas",
		"renderer",
		"fiber",
		"yoga",
		"layout",
		"flexbox",
		"2d",
		"ui",
		"react-reconciler",
		"custom-renderer",
		"graphics"
	],
	"sideEffects": false,
	"files": [
		"dist",
		"AI_GUIDE.md",
		"SKILL.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/jiujue/react-canvas-fiber",
		"directory": "packages/react-canvas-fiber"
	},
	"homepage": "https://jiujue.github.io/react-canvas-fiber/",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "tsup --config tsup.config.ts",
		"dev": "tsup --config tsup.config.ts --watch",
		"clean": "rimraf dist",
		"test:types": "tsc -p tsconfig.test.json --noEmit",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"peerDependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"dependencies": {
		"react-reconciler": "^0.29.0",
		"yoga-layout": "^3.2.1"
	},
	"devDependencies": {
		"@types/react": "^18.2.48",
		"@types/react-reconciler": "^0.28.9",
		"@vitest/coverage-v8": "^2.1.9",
		"rimraf": "^6.0.1",
		"tsup": "^8.3.5",
		"typescript": "^5.5.4",
		"vitest": "^2.1.9"
	}
}
